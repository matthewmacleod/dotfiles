set folder=$HOME/.mail

set spoolfile=+"personal/INBOX"

set from = "user@domain.com"
set realname = "My Name"
set imap_user = "user@domain.com"
set imap_pass = "s3cr3t"
set smtp_url = "smtp://user@smtp.gmail.com:587/"
